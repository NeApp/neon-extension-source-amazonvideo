{
  "title": "Amazon Video",

  "content_scripts": [
    {
      "id": "main",
      "conditions": [
        {
          "pattern": "*://www.amazon.com/dp/*",
          "pageUrl": {
            "originAndPathMatches": ".*://www\\.amazon\\.com/dp/.*"
          }
        },
        {
          "pattern": "*://www.amazon.com/*/dp/*",
          "pageUrl": {
            "originAndPathMatches": ".*://www\\.amazon\\.com/.*/dp/.*"
          }
        },
        {
          "pattern": "*://www.amazon.com/gp/product/*",
          "pageUrl": {
            "originAndPathMatches": ".*://www\\.amazon\\.com/gp/product/.*"
          }
        },
        {
          "pattern": "*://www.amazon.com/gp/video/detail/*",
          "pageUrl": {
            "originAndPathMatches": ".*://www\\.amazon\\.com/gp/video/detail/.*"
          }
        }
      ],
      "js": [
        "common.js",
        "source/common.js",
        "source/amazonvideo/amazonvideo.js"
      ]
    }
  ],
  "services": [
    "configuration",

    "source/activity"
  ],
  "origins": [
    "*://amazon.com/*",
    "*://www.amazon.com/*",
    "*://atv-ps.amazon.com/*"
  ],
  "web_accessible_resources": [
    "source/amazonvideo/shim/shim.js"
  ],

  "webpack": {
    "modules": [
      "shim"
    ]
  }
}
