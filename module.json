{
  "title": "Amazon Video",

  "content_scripts": [
    {
      "id": "main",

      "conditions": [
        { "pageUrl": { "originAndPathMatches": ".*://www\\.amazon\\.com/dp/.*" } },
        { "pageUrl": { "originAndPathMatches": ".*://www\\.amazon\\.com/.*/dp/.*" } },
        { "pageUrl": { "originAndPathMatches": ".*://www\\.amazon\\.com/gp/product/.*" } },
        { "pageUrl": { "originAndPathMatches": ".*://www\\.amazon\\.com/gp/video/detail/.*" } }
      ],

      "matches": [
        "*://www.amazon.com/dp/*",
        "*://www.amazon.com/*/dp/*",
        "*://www.amazon.com/gp/product/*",
        "*://www.amazon.com/gp/video/detail/*"
      ],

      "js": [
        "common.js",
        "source/common.js",
        "source/amazonvideo/amazonvideo.js"
      ]
    }
  ],
  "services": [
    "configuration",

    "source/activity"
  ],
  "origins": [
    "*://amazon.com/*",
    "*://www.amazon.com/*",
    "*://atv-ps.amazon.com/*"
  ],
  "web_accessible_resources": [
    "source/amazonvideo/shim/shim.js"
  ],

  "webpack": {
    "modules": [
      "shim"
    ]
  }
}
