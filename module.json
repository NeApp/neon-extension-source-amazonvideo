{
  "title": "Amazon Video",

  "content_scripts": [
    {
      "id": "main",

      "conditions": [
        { "pageUrl": { "originAndPathMatches": ".*://www\\.amazon\\.com/dp/.*" } },
        { "pageUrl": { "originAndPathMatches": ".*://www\\.amazon\\.com/.*/dp/.*" } },
        { "pageUrl": { "originAndPathMatches": ".*://www\\.amazon\\.com/gp/product/.*" } },
        { "pageUrl": { "originAndPathMatches": ".*://www\\.amazon\\.com/gp/video/detail/.*" } },
        { "pageUrl": { "originAndPathMatches": ".*://www\\.amazon\\.com/gp/video/storefront/.*" } }
      ],

      "matches": [
        "*://www.amazon.com/dp/*",
        "*://www.amazon.com/*/dp/*",
        "*://www.amazon.com/gp/product/*",
        "*://www.amazon.com/gp/video/detail/*"
      ],

      "js": [
        "Common.js",
        "Modules/Common.js",
        "Modules/neon-extension-source-amazonvideo/Main.js"
      ]
    }
  ],
  "services": [
    "Configuration",
    "Source:Activity"
  ],
  "origins": [
    "*://amazon.com/*",
    "*://www.amazon.com/*",
    "*://atv-ps.amazon.com/*"
  ],
  "web_accessible_resources": [
    "Modules/neon-extension-source-amazonvideo/Shim.js"
  ],

  "webpack": {
    "modules": {
      "Shim": { "entry": true }
    }
  }
}
